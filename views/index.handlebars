<div class="row text-center create-row">
    <h3>New burger</h3>
    <form class="form-inline" action="/index" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Enter burger type">
        </div>
        <button type="submit" class="btn btn-default">Burger</button>
    </form>
</div>

<div class="row">
    <div class="col-md-3 col-md-offset-2">
        {{#each foobar}}
            {{#unless this.devoured}}
                <div class="well text-center">
                    <h4>{{this.burger_name}}</h4>
                    <div>
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <button type="submit" class="btn btn-warning">Fest on Burger</button>
                        </form>
                    </div>
                </div>
            {{/unless}}
        {{/each}}
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-3">
        {{#each foobar}}
            {{#if this.devoured}}
                <div class="well text-center">
                    <h4>{{this.burger_name}}</h4>
                    <div>
                        <form action="/{{this.id}}?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">Cleanse</button>
                        </form>
                    </div>
                </div>
            {{/if}}
        {{/each}}
    </div>
</div>